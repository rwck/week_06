<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Function</th>
      <th>Failure</th>
      <th>Effect of failure</th>
      <th>Cause of failure</th>
      <th>Current controls</th>
      <th>Recommended actions</th>
      <th>Probability estimate</th>
      <th>Severity estimate</th>
      <th>Detection indicators</th>
      <th>Detection dormancy period</th>
      <th>Risk level</th>
      <th>Further investigation</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.item %></td>
        <td><%= issue.function %></td>
        <td><%= issue.failure %></td>
        <td><%= issue.effect_of_failure %></td>
        <td><%= issue.cause_of_failure %></td>
        <td><%= issue.current_controls %></td>
        <td><%= issue.recommended_actions %></td>
        <td><%= issue.probability_estimate %></td>
        <td><%= issue.severity_estimate %></td>
        <td><%= issue.detection_indicators %></td>
        <td><%= issue.detection_dormancy_period %></td>
        <td><%= issue.risk_level %></td>
        <td><%= issue.further_investigation %></td>
        <td><%= issue.project %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

